<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/circle_info_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/circle_owner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="13dp"
            android:paddingTop="15dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/circle_owner_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp" />

            <TextView
                android:id="@+id/circle_owner_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/circle_owner_head"
                android:gravity="center_vertical"
                android:text="圈主-客户经理"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/circle_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_owner_text"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/circle_owner_head"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="13sp"
                tools:text="李平安" />

            <TextView
                android:id="@+id/circle_owner_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_owner_text"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/circle_owner_name"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:visibility="visible"
                tools:text="手机：10010095511" />

            <ImageView
                android:id="@+id/image_circle_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingRight="13dp" />

        </RelativeLayout>

        <View
            android:id="@+id/view_blank1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"/>

        <View
            android:id="@+id/view_blank2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"/>

        <RelativeLayout
            android:id="@+id/my_circle_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingTop="15dp"
            android:visibility="gone">


            <TextView
                android:id="@+id/my_circle_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:text="圈名称"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/my_circle_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/my_circle_name_title"
                android:drawablePadding="13dp"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp"
                tools:text="圈A" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/my_circle_name_title"
                android:layout_marginTop="15dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/my_circle_alias"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingTop="15dp">


            <TextView
                android:id="@+id/my_circle_alias_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:text="我的圈名片"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/my_circle_alias_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/my_circle_alias_title"
                android:drawablePadding="13dp"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp"
                tools:text="圈ABC" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/my_circle_alias_title"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/circle_member"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="15dp">


            <TextView
                android:id="@+id/circle_member_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:text="圈成员"
                android:textSize="15sp" />

            <GridView
                android:id="@+id/circle_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_member_text"
                android:layout_margin="13dp"
                android:filterTouchesWhenObscured="true"
                android:gravity="start"
                android:horizontalSpacing="15dp"
                android:isScrollContainer="true"
                android:numColumns="5"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="14dp"
                android:scrollbarSize="0dp"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"
                android:visibility="visible"
                tools:columnWidth="80dp"/>

            <View
                android:id="@+id/linex"
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_below="@+id/circle_members"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:id="@+id/all_circle_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linex"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/all_circle_members_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:gravity="center_vertical"
                    android:text="全部圈成员"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingRight="13dp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"/>

        <RelativeLayout
            android:id="@+id/circle_msg_setting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/circle_msg_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:text="圈消息设置"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/circle_msg_setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingRight="13dp"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"/>

        <RelativeLayout
            android:id="@+id/rl_clear_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:text="清空圈消息"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>