<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="libiao.libiaodemo.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="listview不缓存"
        android:onClick="listview"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="listview内存缓存"
        android:onClick="listview_memory"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="listview磁盘缓存"
        android:onClick="listview_disk"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="recyclerview不缓存"
        android:onClick="recyclerview"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="recyclerview内存缓存"
        android:onClick="recyclerview_memory"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="recyclerview磁盘缓存"
        android:onClick="recyclerview_disk"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Video"
        android:onClick="video"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="弹幕"
        android:onClick="danmu"/>


</LinearLayout>
