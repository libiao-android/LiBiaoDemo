<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="#CE1F17"
    android:gravity="center_horizontal">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_view_success"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:lottie_fileName="search_coupon_success.json"
        app:lottie_imageAssetsFolder="search_coupon_success"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="30dp"
        android:id="@+id/lottie_animation_view_fail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:lottie_fileName="search_coupon_fail.json"
        app:lottie_imageAssetsFolder="search_coupon_fail"/>
</LinearLayout>
